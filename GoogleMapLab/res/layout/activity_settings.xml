<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <RelativeLayout 
        android:id="@+id/settings_map_types_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView 
            android:id="@+id/settings_map_types_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/settings_map_type_header"
            android:textSize="20sp" />
        
        <ListView
			android:id="@+id/settings_map_types_list"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/settings_map_types_header" >
		</ListView>
        
        <Button
            android:id="@+id/settings_map_type_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/settings_map_types_list"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:gravity="right|top"
            android:text="@string/settings_map_type_button" />
        
    </RelativeLayout>
    
	
	
	<RelativeLayout 
		android:id="@+id/settings_circle_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/settings_map_types_layout"
		android:layout_marginTop="15dp" >
	    
	    <Button 
		    android:id="@+id/settings_circles_clear_button"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
			android:layout_marginLeft="15dp"
			android:gravity="left|top"
			android:text="@string/settings_map_clear_circles"/>
	    
	    <SeekBar 
	        android:id="@+id/settings_circle_radius_seek_bar"
	        android:layout_width="match_parent"
		    android:layout_height="wrap_content"
	        android:layout_below="@+id/settings_circles_clear_button"
	        android:layout_marginTop="5dp"
	        android:max="@integer/settings_circle_radius_max" />
	    
	    <TextView 
	       android:id="@+id/settings_circle_radius_value"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/settings_circle_radius_seek_bar"
           android:text="@string/settings_current_radius_title"
           android:textSize="20sp" />
	    
	</RelativeLayout>
    
</RelativeLayout>
